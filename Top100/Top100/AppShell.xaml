<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Top100.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Scratch it">
    
    <TabBar>
        <ShellContent Title="Movies"
                      Icon="settings.png"
                      ContentTemplate="{DataTemplate local:MoviesPage}"
                      Route="MoviesPage"/>

        <ShellContent Title="Music"
                      ContentTemplate="{DataTemplate local:MusicPage}"
                      Route="MusicPage"/>

        
        <ShellContent Title="Games"
                      ContentTemplate="{DataTemplate local:GamesPage}"
                      Route="GamesPage"/>

        <ShellContent Title="Books"
                      ContentTemplate="{DataTemplate local:BooksPage}"
                      Route="BooksPage"/>

    </TabBar>

    

</Shell>
